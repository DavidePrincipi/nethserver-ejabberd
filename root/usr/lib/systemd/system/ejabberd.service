[Unit]
Description=XMPP Server
After=network.target

[Service]
User=ejabberd
Group=ejabberd
LimitNOFILE=16000
RestartSec=5
Environment=LOGS_DIR=/var/log/ejabberd 
Environment=EJABBERD_CONFIG_PATH=/etc/ejabberd/ejabberd.cfg 
Environment=SPOOL_DIR=/var/lib/ejabberd
ExecStart=/bin/sh /opt/ejabberd-16.01/bin/ejabberdctl start
ExecStop=/opt/ejabberd-16.01/bin/ejabberdctl stop
ExecReload=/opt/ejabberd-16.01/bin/ejabberdctl reload_config
Type=oneshot
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
